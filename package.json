{
  "name": "opentv-player",
  "productName": "OpenTV Player",
  "version": "0.2.0",
  "description": "Aplicação leve para visualizar IPTV com sistema de favoritos e modo servidor",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "iptv",
    "player",
    "electron",
    "streaming"
  ],
  "author": "OpenTV",
  "license": "MIT",
  "build": {
    "appId": "com.opentv.player",
    "productName": "OpenTV Player",
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "AudioVideo",
      "icon": "build/icon.png"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!logotipo/**"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "hls.js": "^1.6.15"
  }
}
